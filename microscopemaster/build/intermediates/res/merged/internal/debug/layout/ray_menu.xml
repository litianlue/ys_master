<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.yeespec.microscope.widget.raymenu.RayLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                     android:id="@+id/item_layout"
                                                     android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:layout_centerVertical="true"
                                                     custom:childSize="116dp"
                                                     custom:leftHolderWidth="115dp"/>

    <FrameLayout
        android:id="@+id/control_layout"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/button_1">

        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:background="@drawable/item_bg_setting_little_gray">

            <ImageView
                android:id="@+id/setting_light_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_bg_setting_light_black"/>

            <TextView
                android:id="@+id/setting_multiple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10X"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/control_hint"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:src="@drawable/composer_icn_plus"/>
    </FrameLayout>

</merge>
